@model LMSApp.ViewModel.AuthorViewModel

<div class="page-section bg-alt border-bottom-2">
    <div class="container">
        <div class="row">
            <div class="col-md-7 mb-24pt mb-md-0">
                <h4>About the author</h4>
                <p class="text-70 mb-24pt">@Model.Description</p>

                <div class="page-separator">
                    <div class="page-separator__text bg-white">More from the author</div>
                </div>

                <div class="card card-sm mb-8pt">
                    <div class="card-body d-flex align-items-center">
                        <a href="course.html"
                           class="avatar avatar-4by3 mr-12pt">
                            <img src="~/images/paths/angular_routing_200x168.png"
                                 alt="Angular Routing In-Depth"
                                 class="avatar-img rounded" />
                        </a>
                        @foreach (var item in Model.authorCourses)
                        {
                            <div class="flex">
                                <a class="card-title mb-4pt"
                                   href="course.html">@item.CourseName</a>
                                <div class="d-flex align-items-center">
                                    <div class="rating mr-8pt">

                                         @for (int i = 1; i < 6; i++)
                                        {
                                            if (@item.AverageRating >= i)
                                            {
                                                <span class="rating__item"><span class="material-icons">star</span></span>
                                            }
                                            else
                                            {
                                                <span class="rating__item"><span class="material-icons">star_border</span></span>

                                            }
                                        }

                                    </div>
                                    <small class="text-muted">@item.AverageRating/5</small>
                                </div>
                            </div>
                        }
                        
                    </div>
                </div>
                <div class="list-group list-group-flush">
                    @foreach (var item in Model.authorCourses)
                    {
                        <div class="list-group-item px-0">
                            <a href=""
                               class="card-title mb-4pt">@item.CourseName</a>
                            <p class="lh-1 mb-0">
                                <small class="text-muted mr-8pt">@item.RunTime</small>
                                <small class="text-muted mr-8pt">13,876 Views</small>
                                <small class="text-muted">@item.CreatedDate</small>
                            </p>
                        </div>
                    }
              
                </div>
            </div>
            <div class="col-md-5 pt-sm-32pt pt-md-0 d-flex flex-column align-items-center justify-content-start">
                <div class="text-center">
                    <p class="mb-16pt">
                        <img src="~/images//people/110/guy-1.jpg"
                             alt="guy-6"
                             class="rounded-circle"
                             width="64" />
                    </p>
                    <h4 class="m-0">@Model.Name</h4>
                    <p class="lh-1">
                        <small class="text-muted"></small>
                    </p>
                    <div class="d-flex flex-column flex-sm-row align-items-center justify-content-start">
                        <a href="teacher-profile.html"
                           class="btn btn-outline-primary mb-16pt mb-sm-0 mr-sm-16pt">Follow</a>
                        <a href="teacher-profile.html"
                           class="btn btn-outline-secondary">View Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
